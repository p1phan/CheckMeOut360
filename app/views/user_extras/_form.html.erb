<%= simple_form_for @user_extra, :html => {:class => 'form-horizontal'} do |f| %>
  <input type='hidden' value="<%= redirect_path %>" name="redirect_path" id="redirect_path" />
  <input type='hidden' value="<%= user_id %>" name="user_extra[user_id]" id="user_id"/>
  <div class="control-group">
      <label class="control-label" for="inputName">Name</label>
      <div class="controls">
        <input type="text" name="user_extra[name]" id="inputName" placeholder="Name">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputExtra">Extra</label>
      <div class="controls">
        <input type="text" name="user_extra[extra]" id="inputExtra" placeholder="Link or text">
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name="user_extra[link]" value='true' checked='checked'> Link?
        </label>
        <br/>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
<% end %>