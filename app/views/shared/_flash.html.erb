<% flash.each do |key, message|

  if message == I18n.t("devise.failure.invalid") || flash_type == "error"
    html_key = 'error'
  elsif key == :notice 
    html_key = 'success'
  else
    html_key = key
  end
%>
<div class="alert-message <%=html_key%>" data-alert="alert">
  <a class="close" href="#">Ã—</a>
  <p><%=message%></p>
</div>
<% end %>

