        <span style="color: white;"><%= current_user.name %> +</span><span style="color: orange"> <%= current_user.location %> +</span><span style="color: #007899"> Total Checkins Â»</span><span style="color: #129900"><%=current_user.checkins.count %></span>
      </div>
    <% else %>
      <div class="title_block">
        <span id="title_header">CheckMeOut 360 </span> <span style="color: red"> Ground Zero Labs</span>
      </div>
    <% end %>
  </div>
  <%= yield :splash_page %>
