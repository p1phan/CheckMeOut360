<div id="posts_start_controller">
  <h1>Listing posts</h1>

  <table>
    <tr>
      <th>User</th>
      <th>Creator</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user_id %></td>
      <td><%= post.creator_id %></td>
      <td><%= post.message %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Post', new_post_path %>
</div>