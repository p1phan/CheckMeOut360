<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email, :required => false, :autofocus => true, :input_html => {:class => "input-small", :autocomplete => "off"}, :label => false, :placeholder => "Email"%>
  <%= f.input :password, :required => false, :input_html => {:class => "input-small"}, :label => false, :placeholder => "Password" %>
  <%= f.button :submit, "Sign in", :class => "btn info bottom_space" %>
<% end %>
