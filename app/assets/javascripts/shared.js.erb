$(document).ready(function() {
  
  $('.login_with_facebook').click(function(obj) {
    $('#page_contents').hide();
    $('#loader_circle').show();
  });
  
  // The About and Show Page
  $('#top_main_global_bar #about_page').click(function(obj){
    $('#main_nav_tab').hide();
    $.ajax({
      url: '/walls/about',
      type: 'get'
    });
  });
  
  $('#top_main_global_bar #contact_page').click(function(obj){
    $('#main_nav_tab').hide();
    $.ajax({
      url: '/walls/contact',
      type: 'get'
    });
  });
  
  $('#top_main_global_bar #help_page').click(function(obj){
    $('#main_nav_tab').hide();
    $.ajax({
      url: '/walls/help',
      type: 'get'
    });
  });

  // Main Nav-Tab Bar
  $('#main_nav_tab #wall_tab').click(function() {
    wall_id = $('#current_wall').text();
    $.ajax({
      url: '/walls/list',
      type: 'get',
      data: {id: wall_id}
    });
    
    $('li#li_for_wall').attr("class", "active");
    $('li#li_for_place').removeClass("active");
  });
  
  $('#main_nav_tab #place_tab').click(function() {
    wall_id = $('#current_wall').text();
    $.ajax({
      url: '/places/list',
      type: 'get',
      data: {id: wall_id},
      beforeSend: function() {
        // $('#page_contents').hide();
        // $('#loader_circle').show();
        $("#map_canvas").html('<%= image_tag "ajax-loader.gif" %>');
      }
    });
    
    $('li#li_for_place').attr("class", "active");
    $('li#li_for_wall').removeClass("active");
  });

  // Right Nav-Tab Bar
  $('#right_side_tab #places_link').click(function() {
    $('#list_of_users').hide();
    $('#list_of_checkins').hide();
    $('#list_of_places').show();
    $('li#places_list').attr("class", "active");
    $('li#users_list').removeClass("active");
    $('li#checkins_list').removeClass("active");
  });
  
  $('#right_side_tab #checkins_link').click(function() {
    $('#list_of_users').hide();
    $('#list_of_places').hide();
    $('#list_of_checkins').show();
    $('li#checkins_list').attr("class", "active");
    $('li#users_list').removeClass("active");
    $('li#places_list').removeClass("active");
  });
  
  $('#right_side_tab #users_link').click(function() {
    $('#list_of_places').hide();
    $('#list_of_checkins').hide();
    $('#list_of_users').show();
    $('li#users_list').attr("class", "active");
    $('li#places_list').removeClass("active");
    $('li#checkins_list').removeClass("active");
  });
  
  $('#sub_user_navigation #active_users').click(function() {
    $('#inactive_user_div').hide();
    $('#active_user_div').show();
    $('li#active_users').attr("class", "active");
    $('li#inactive_users').removeClass("active");
  });
  
  $('#sub_user_navigation #inactive_users').click(function() {
    $('#active_user_div').hide();
    $('#inactive_user_div').show();
    $('li#inactive_users').attr("class", "active");
    $('li#active_users').removeClass("active");
  });
  
  

});